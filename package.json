{
  "name": "testlink-facace-api",
  "version": "1.0.0",
  "description": "TestLink Facade Api",
  "main": "index.js",
  "repository": "https://github.com/lucsimao/testlink-facade-api.git",
  "author": "lucsimao <lucasimao64@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js",
    "start:local": "dotenv -e .env -- ts-node-dev src/index.ts",
    "test": "yarn lint && yarn style:check && yarn test:unit && yarn test:integration && yarn test:functional",
    "test:unit": "jest --config ./config/jest/jest.unit.config.js",
    "test:integration": "jest --config ./config/jest/jest.integration.config.js",
    "test:functional": "jest --config ./config/jest/jest.functional.config.js --forceExit --runInBand",
    "test:mutation": "stryker run",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "style:check": "prettier --check src/**/*.ts test/**/*.ts",
    "style:fix": "prettier --write src/**/*.ts test/**/*.ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@overnightjs/core": "^1.7.6",
    "@stryker-mutator/core": "^5.4.0",
    "@stryker-mutator/jest-runner": "^5.4.0",
    "@types/axios": "^0.14.0",
    "@types/config": "^0.0.39",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/module-alias": "^2.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^13.13.2",
    "@types/pino": "^6.3.11",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.32.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "config": "^3.3.6",
    "dotenv-cli": "^4.0.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.12.15",
    "http-status-codes": "^2.1.4",
    "module-alias": "^2.2.2",
    "pino": "^6.13.0",
    "swagger-ui-express": "^4.1.6",
    "testlink-xmlrpc": "^2.0.2"
  }
}
